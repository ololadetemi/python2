calculation_to_units = 24
name_of_unit = "hours"

print(f"20 days are {20 * calculation_to_units} {name_of_unit}")
print(f"35 days are {35 * calculation_to_units} {name_of_unit}")

print("Functions")


def days_to_units(num_of_days, custom_message):
   print(f"{num_of_days} days are {num_of_days * calculation_to_units} {name_of_unit} {custom_message}")
   

days_to_units(20, "awesome!")
days_to_units(35, "amazing!")
days_to_units(100, "great!")

